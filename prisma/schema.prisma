generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Estado {
  ACTIVO
  INACTIVO
}

enum CategoriaInvitado {
  ADULTO
  NINO
}

model Invitacion {
  id                String          @id @default(auto()) @map("_id") @db.ObjectId
  numero            String          @unique
  estado            Estado          @default(ACTIVO)

  // Nuevos campos para tus encabezados
  hostedBy          String?         // Hosted By
  tipo              String?         // Tipo
  familia           String?         // Familia
  saveTheDate       Boolean?        // Save the Date enviado
  invitacionEnviada Boolean?        // Invitación enviada
  especial          Boolean?        // Especial
  tanteo            Int?            // Tanteo

  invitados         Invitado[]
  confirmaciones    Confirmacion[]
}

model Invitado {
  id                    String       @id @default(auto()) @map("_id") @db.ObjectId
  nombre                String
  principal             Boolean?     // Principal
  categoria             CategoriaInvitado? // Adulto | Niño
  estado                Estado       @default(ACTIVO)
  invitacionId          String
  invitacion            Invitacion?  @relation(fields: [invitacionId], references: [id])

  confirmacionInvitados ConfirmacionInvitado[]
}

model Confirmacion {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  dedicatoria   String
  createdAt     DateTime     @default(now())
  invitacionId  String
  invitacion    Invitacion?  @relation(fields: [invitacionId], references: [id])

  confirmacionInvitados ConfirmacionInvitado[]
}

enum Respuesta {
  SI
  NO
}

model ConfirmacionInvitado {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId

  confirmacionId String
  confirmacion   Confirmacion @relation(fields: [confirmacionId], references: [id])

  invitadoId     String
  invitado       Invitado     @relation(fields: [invitadoId], references: [id])

  respuesta      Respuesta

  @@unique([confirmacionId, invitadoId])
}
